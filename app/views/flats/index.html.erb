

<h1>Apartments for Rent</h1>
<div class = "container">
    
    <div class = "row">
        
        <% @flats.each do |flat| %>
        
        <div class = "bg-secondary text-white col-3 m-3 p-3 d-flex flex-column justify-content-between">
            <h3><%= flat.name%></h3>
            <%= flat.address%>
            <%= flat.price_per_night%>
            <%= flat.description%>
            <%= flat.number_of_guests%>
            <div class ="bg-primary p-3 rounded text-center"><%= link_to "More info", flat_path(flat), class: "text-white text-decoration-none"%>
            </div>
       
         </div>
    <%end%>
   
    </div>
    </div>